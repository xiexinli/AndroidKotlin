<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正三角 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-36%"
            android:pivotY="86%">
            <shape android:shape="rectangle">
                <size
                    android:width="20dp"
                    android:height="20dp" />
                <solid android:color="#CC000000" />
            </shape>
        </rotate>
    </item>
</layer-list>